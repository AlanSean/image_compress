{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@common/*": ["common/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["renderer/utils/*"],
      "@app/*": ["renderer/app/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "!src/renderer/assets/**/*.js", "src/Extensions"]
}
