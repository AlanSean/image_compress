{
  "productName": "image_compress",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "bin/${os}/mac/*",
    "bin/${os}/win/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!example/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "appId": "com.image_compress.app",
  "nsis": {
    "oneClick": false, 
    "allowToChangeInstallationDirectory": true,
    "perMachine": true
  },
  "asar": true,
  "asarUnpack": [
    "bin/mac",
    "bin/win"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis",
      "zip"
    ]
  },
  "mac": {
    "category": "public.app.category.imgCompress",
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
